{
  "name": "osutime",
  "version": "1.0.0",
  "description": "Yeet",
  "main": "server/server.js",
  "scripts": {
    "test": "cd server && npm test && cd ../client && npm test",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "client": "cd client && npm start",
    "server": "cd server && nodemon src/server.js",
    "start": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "build": "cd client && npm run-script build",
    "serve": "npm run client-production && npm run server-production",
    "client-production": "cd client && serve -s build",
    "server-production": "cd server && pm2 start src/server.js --name \"osuTime\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Michiocre/osuTime.git"
  },
  "author": "Michiocre",
  "license": "Yeet",
  "bugs": {
    "url": "https://github.com/Michiocre/osuTime/issues"
  },
  "homepage": "https://github.com/Michiocre/osuTime#readme",
  "dependencies": {},
  "devDependencies": {
    "concurrently": "^4.1.0"
  }
}
